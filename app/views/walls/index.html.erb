<h1><%=@wall.user.email%>'s Wall </h1>
 <%= link_to 'New post', new_post_path %>
 <%= button_to "Logout", logout_path, method: :delete, class: "buttons" %>

 <%= render 'form' %>
 
 <% @posts.reverse.each do |post| %>
   </br>
   <div class='post'>
     <div class = 'post-message'>
       <h4><%= post.email %></h4>
       <h4><%= simple_format post.message %> at <%= post.created_at %></h4>
       <h4><%= link_to 'Show', post_path(post) %>
       <% if post.user_id == session[:user_id] %>
           <% if Time.now - post.created_at < 10.minutes %>
           <%= link_to 'Edit', edit_post_path(post) %>
           <% end %>
           <%= link_to 'Destroy', post_path(post),
           method: :delete,
           data: { confirm: 'Are you sure?' } %>
       <% end %>
     </h4>
   </div>

     <% @post = post %>
     <%= render post.comments %>
   
     <h4>Add a comment:</h4>
     <%= render 'comments/form' %>

   </div>

 <% end %>

 <% @walls.each do |wall| %>
  </br>
  <div class='wall'>
      <h4><%= wall.user.email %></h4>
      <h4><%= link_to 'Show', wall_path(wall) %></h4>
  </div>
  <% end %>