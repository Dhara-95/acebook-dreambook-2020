<h1>Welcome to Dreambook!</h1>

<h1>Login</h1>

<%  if !@error.nil? %>
    <div id="error_explanation">
      <h2><%=@error%></h2>
      </ul>
    </div>
  <% end %>

   <%= form_tag '/login' do %>
<p>
   <%= label_tag :email%>
<br>
   <%= text_field_tag :email %>
</p>
<p>
   <%= label_tag :username%>
<br>
   <%= text_field_tag :username %>
</p>
<p>
   <%= label_tag :password%>
<br>
   <%= password_field_tag :password%>
</p>
   <%= submit_tag "Login", class: "buttons" %>

<%end%>


<%= button_to "Sign Up", '/users/new', class: "buttons", method: :get%>
