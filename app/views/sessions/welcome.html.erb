<h1>Welcome to Dreambook!</h1>

<% if logged_in? %>
    <h1>You are Logged In, <%= current_user.email %></h1>
<%end%>

<h1>Login</h1>

<%  if !@error.nil? %>
    <div id="error_explanation">
      <h2><%=@error%></h2>
      </ul>
    </div>
  <% end %>

   <%= form_tag '/login' do %>

   <%= label_tag :email%>

   <%= text_field_tag :email %>

   <%= label_tag :password%>

   <%= password_field_tag :password%>

   <%= submit_tag "Login", class: "buttons" %>

<%end%>


<%= button_to "Sign Up", '/users/new', class: "buttons", method: :get%>
